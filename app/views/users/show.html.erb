
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.books.any? %>
      <h3><%= @user.name %> have (<%= @user.books.count %>) books </h3>
	<span class = "name">Name |  <span class = "author">Author  |  </span><span class = "publisher">Publisher</span> <br /> 
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% end %>
  </div>  
</div>
